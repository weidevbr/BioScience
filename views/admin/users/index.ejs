<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <br/>
    <h2>Usuários</h2>
    <br/>
    <a href="/admin/users/create" class="btn btn-success mb-3">
         <i class="bi bi-plus"></i> 
         Criar novo usuário </a>
    <hr/>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach( user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                </tr>
            <% })%>
        </tbody>
    </table>
</div>


